<?xml version="1.0"?>
<ruleset name="Strict Complexity Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Strict complexity rules to identify files that need refactoring
    </description>

    <!-- Cyclomatic Complexity - stricter threshold -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <!-- Lower to 3 to catch even more methods -->
            <property name="reportLevel" value="3"/>
            <property name="showClassesComplexity" value="true"/>
            <property name="showMethodsComplexity" value="true"/>
        </properties>
    </rule>

    <!-- NPath Complexity - stricter threshold -->
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <!-- Reduce from 200 to 50 to catch more complex methods -->
            <property name="minimum" value="50"/>
        </properties>
    </rule>

    <!-- Excessive Method Length -->
    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <!-- Reduce from 100 to 30 lines -->
            <property name="minimum" value="30"/>
        </properties>
    </rule>

    <!-- Excessive Class Length -->
    <rule ref="rulesets/codesize.xml/ExcessiveClassLength">
        <properties>
            <!-- Reduce from 1000 to 200 lines -->
            <property name="minimum" value="200"/>
        </properties>
    </rule>
</ruleset>
