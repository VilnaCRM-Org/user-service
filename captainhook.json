{
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "/^(feat|fix|refactor)\\(\\#\\d+\\):.*$/i",
                    "error": "The commit message should be in the format: feat|fix|refactor(#1):"
                }
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": [],
                "conditions": []
            },
            {
                "action": "make phpcsfixer",
                "options": [],
                "conditions": []
            },
            {
                "action": "make check-requirements",
                "options": [],
                "conditions": []
            },
            {
                "action": "make check-security",
                "options": [],
                "conditions": []
            },
            {
                "action": "make psalm",
                "options": [],
                "conditions": []
            },
            {
                "action": "make psalm-security",
                "options": [],
                "conditions": []
            },
            {
                "action": "make phpinsights",
                "options": [],
                "conditions": []
            },
            {
                "action": "make phpunit",
                "options": [],
                "conditions": []
            },
            {
                "action": "make behat",
                "options": [],
                "conditions": []
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\PrepareConventionalCommit"
            }
        ]
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": false,
        "actions": []
    }
}
