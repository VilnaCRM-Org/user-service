{
    "config": {
        "run": {
            "mode": "docker",
            "exec": "docker compose exec -i php"
        }
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "/^(feat|fix|refactor|build|chore|ci|doc|style|perf|test)\\(\\#\\d+\\):.*$/i",
                    "error": "The commit message should be in the format: feat|fix|refactor|build|chore|ci|doc|style|perf|test(#1):"
                }
            }
        ]
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": [],
                "conditions": []
            },
            {
                "action": "PHP_CS_FIXER_IGNORE_ENV=1 ./vendor/bin/php-cs-fixer fix $(git ls-files -om --exclude-standard) --allow-risky=yes --config .php-cs-fixer.dist.php",
                "options": [],
                "conditions": []
            },
            {
                "action": "./vendor/bin/psalm",
                "options": [],
                "conditions": []
            },
            {
                "action": "./vendor/bin/psalm --taint-analysis",
                "options": [],
                "conditions": []
            },
            {
                "action": "./vendor/bin/phpinsights --no-interaction && ./vendor/bin/phpinsights analyse tests --no-interaction",
                "options": [],
                "conditions": []
            },
            {
                "action": "./vendor/bin/phpunit --testsuite=Unit && ./vendor/bin/phpunit --testsuite=Integration",
                "options": [],
                "conditions": []
            },
            {
                "action": "APP_ENV=test ./vendor/bin/behat",
                "options": [],
                "conditions": []
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\PrepareConventionalCommit"
            }
        ]
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": false,
        "actions": []
    }
}