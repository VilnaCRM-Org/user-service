<doctrine-mongo-mapping
  xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd"
>

    <document name="App\User\Domain\Entity\PasswordResetToken" db="user_service" collection="password_reset_tokens">

        <id field-name="tokenValue" type="string" strategy="NONE" />

        <field field-name="userID" type="string" />
        <field field-name="expiresAt" type="date_immutable" />
        <field field-name="createdAt" type="date_immutable" />
        <field field-name="isUsed" type="boolean" />

        <indexes>
            <!-- Index on userID for queries -->
            <index>
                <key name="userID" order="asc" />
            </index>

            <!-- Index on expiresAt for cleanup queries -->
            <index>
                <key name="expiresAt" order="asc" />
            </index>

            <!-- Index on createdAt for sorting -->
            <index>
                <key name="createdAt" order="asc" />
            </index>

            <!-- Compound index for active token lookup -->
            <index>
                <key name="userID" order="asc" />
                <key name="isUsed" order="asc" />
                <key name="expiresAt" order="asc" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
