<doctrine-mongo-mapping
  xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd"
>

    <document name="League\Bundle\OAuth2ServerBundle\Model\Client" db="user_service" collection="oauth2_clients">

        <id field-name="identifier" type="string" strategy="NONE" />

        <field field-name="name" type="string" />
        <field field-name="secret" type="string" nullable="true" />
        <field field-name="active" type="boolean" />
        <field field-name="allowPlainTextPkce" type="boolean" />

        <!-- Store value objects as arrays of strings -->
        <field field-name="redirectUris" type="collection" />
        <field field-name="grants" type="collection" />
        <field field-name="scopes" type="collection" />

        <indexes>
            <!-- Unique constraint on identifier (already handled by _id) -->
            <!-- Search by active status -->
            <index>
                <key name="active" order="asc" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
