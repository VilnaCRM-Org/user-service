<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\User\Domain\Entity\PasswordResetToken" table="password_reset_tokens" lazy="false">
        <id name="tokenValue" type="string" length="255" column="token_value">
        </id>

        <field name="userID" type="string" length="255" column="user_id"/>
        <field name="expiresAt" type="datetime_immutable" column="expires_at"/>
        <field name="createdAt" type="datetime_immutable" column="created_at"/>
        <field name="isUsed" type="boolean" column="is_used"/>

        <indexes>
            <index name="idx_user_id" columns="user_id"/>
            <index name="idx_expires_at" columns="expires_at"/>
            <index name="idx_created_at" columns="created_at"/>
        </indexes>
    </entity>
</doctrine-mapping>
