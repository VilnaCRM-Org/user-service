<doctrine-mongo-mapping
  xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                                            http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd"
>

    <document name="App\User\Domain\Entity\AuthRefreshToken" db="user_service" collection="auth_refresh_tokens">
        <id field-name="id" type="string" strategy="NONE" />

        <field field-name="sessionId" type="string" />
        <field field-name="tokenHash" type="string" />
        <field field-name="rotatedAt" type="date_immutable" nullable="true" />
        <field field-name="graceUsed" type="boolean" />
        <field field-name="revokedAt" type="date_immutable" nullable="true" />
        <field field-name="expiresAt" type="date_immutable" />

        <indexes>
            <index unique="true">
                <key name="tokenHash" />
            </index>
            <index>
                <key name="sessionId" order="asc" />
            </index>
            <index>
                <key name="expiresAt" order="asc" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
